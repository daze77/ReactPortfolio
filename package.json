  },
  "homepage": "https://render-reactportfolio.onrender.com",

  "devDependencies": {
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19"

  },
  "dependencies": {
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "if-env": "^1.0.4",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19"
  }
}
